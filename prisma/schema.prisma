// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  OrderProcessed
  PickUpPlanned
  Upgrade
  InboundScan
  DestinationDeliveryCenter
  Scheduled
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  trackings Tracking[]
}

model Tracking {
  id                       Int     @id @default(autoincrement())
  tracking_number          String
  order_number             String
  courier                  String
  street                   String
  zip_code                 String
  city                     String
  destination_country_iso3 String // 3 letter country code
  email                    String
  articleNo                String?
  articleImageUrl          String?
  quantity                 Int?
  product_name             String?

  customerId Int
  customer   User @relation(fields: [customerId], references: [id])

  checkpoints            Checkpoint[]
  checkpointsOnTrackings CheckpointsOnTrackings[]
}

model Checkpoint {
  id             Int      @id @default(autoincrement())
  location       String
  timestamp      DateTime
  status         Status
  status_text    String
  status_details String

  tracking_number String

  tracking               Tracking?                @relation(fields: [trackingId], references: [id])
  trackingId             Int?
  checkpointsOnTrackings CheckpointsOnTrackings[]
}

model CheckpointsOnTrackings {
  tracking     Tracking   @relation(fields: [trackingId], references: [id])
  trackingId   Int // relation scalar field (used in the `@relation` attribute above)
  checkpoint   Checkpoint @relation(fields: [checkpointId], references: [id])
  checkpointId Int // relation scalar field (used in the `@relation` attribute above)

  @@id([trackingId, checkpointId])
}
